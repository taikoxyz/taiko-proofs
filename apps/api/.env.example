# PostgreSQL connection string used by Prisma/Nest.
DATABASE_URL=postgresql://taikoproofs:taikoproofs@localhost:5433/taikoproofs
# L1 RPC endpoint used for on-chain reads and log queries.
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-key
# Chain ID for the L1 network (1 = Ethereum mainnet).
CHAIN_ID=1
# Taiko Inbox contract address on the configured L1.
TAIKO_INBOX_ADDRESS=0x0000000000000000000000000000000000000000
# Indexer start block for on-chain event ingestion (use deployment block for faster backfill).
START_BLOCK=0
# Blocks to wait before treating the head as final.
CONFIRMATIONS=6
# Blocks to rewind each run to tolerate minor reorgs.
REORG_BUFFER=100
# Lookback window (days) for recomputing daily stats; independent from START_BLOCK.
STATS_LOOKBACK_DAYS=90
# Number of blocks per indexing loop and checkpoint.
INDEXER_CHUNK_SIZE=2000
# Max block span per eth_getLogs call (use 10 for Alchemy free tier).
INDEXER_LOG_RANGE_LIMIT=10
# Explorer base URL used to build transaction/block links.
L1_EXPLORER_BASE_URL=https://etherscan.io
# Optional path to verifier mapping JSON (defaults to apps/api/src/config/verifiers.json).
VERIFIER_CONFIG_PATH=
